<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CDN -->    
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
	  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
	  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
	  <script src="https://use.fontawesome.com/releases/v5.0.8/js/all.js"></script>

    <link href="https://fonts.googleapis.com/css?family=Open+Sans&display=swap" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Alice:400">
    <link rel="stylesheet" href="../../css/home.css">     
  </head>

  <body>
    {{>nav}}

    <div class="section-margin">
      <h1>{{title}}</h1>
    </div>

    <div>
        <p>Username</p>
        <input class="placeholder-box" type="text" placeholder="Enter Username" required>
        
        <p>Password</p>
        <input class="placeholder-box section-margin" type="password" placeholder="Enter Password" required>

        <div class="fluid-container section-margin">
          <button type="submit">Login</button>
          <input type="checkbox"> Remember me
        </div>

        <!-- Button to open the modal -->
        <div class="fluid-container">
          <button class="sign-up" onclick="openModal()">Sign Up</button>
        </div>        

        <!-- The modal -->
        <div id="signUp">        
          <span onclick="closeModal()" class="close">X</span>      
          <form class="signup-content" action="/signup" method="post">        
            <!-- !!!!! Correctly Configure POST request as JSON !!!!! -->
            <h1>Sign Up</h1>
            <p>Please fill in this form to create an account.</p>
            <hr>          
            
            <label>Email</label>
            <input type="text" placeholder="Enter Email" name="email" required>
            
            <label>Password</label>
            <input type="password" placeholder="Enter Password" name="password" required>
            <!-- Send POST request only if password === password-repeat -->
            <label>Repeat Password</label>
            <input type="password" placeholder="Repeat Password" name="password-repeat" required>      
            
            <input type="checkbox" checked="checked" name="remember">Remember me     
            <p>By creating an account you agree to our Terms & Privacy.</p>        
            
            <button type="button" onclick="closeModal()">Cancel</button>
            <button type="submit">Sign Up</button>          
          </form>
       </div>
    </div>

    <script>
      const openModal = () => {
        document.getElementById('signUp').style.display='block';
      }
      const closeModal = () => {
        document.getElementById('signUp').style.display='none';
      }
    </script>
  </body>
</html>
